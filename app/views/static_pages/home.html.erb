<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
        <% if current_user.admin? %>
        	<p> (Admin) </p>
        <% end %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      	<ul class="users">
        <%= render 'shared/feed' %>
    	</ul>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Stat Streak</h1>

    <h2>
      This is the home page for
  		<a root_path>Stat Streak</a>.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("statstreak_logo.png", alt: "StatStreakLogo"), root_path %>
<% end %>
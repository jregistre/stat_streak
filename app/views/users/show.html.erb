<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <ul>
        <%= @user.email %>
        <% if @user.admin? %>
          <p> (Admin) </p>
        <% else %>
          <p> (Not admin) </p>
        <% end %>
      </ul>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'follow_form' if signed_in? %>
    </section>
    <section>
        <h3><%= @user.nick_name if @user.nick_name? %> Stats</h3>
        <ul>Height: <%= @user.height_ft %>'<%= @user.height_in %></ul>
        <h6>At Start:</h6>
        <ul>Weight: <%= @user.start_weight %> | BMI: <%= @user.start_weight / (((@user.height_ft * 12) + @user.height_in) * ((@user.height_ft * 12) + @user.height_in)) * 703 %></ul>
        <h6>Current:</h6>
        <ul>Weight: <%= @user.start_weight %> | BMI: <%= @user.start_weight / (((@user.height_ft * 12) + @user.height_in) * ((@user.height_ft * 12) + @user.height_in)) * 703 %></ul>
        <ul>On <%= @user.created_at %></ul>
        <h6>Goal:</h6>
        <ul>Weight: <%= @user.target_weight %> | BMI: <%= @user.target_weight / (((@user.height_ft * 12) + @user.height_in) * ((@user.height_ft * 12) + @user.height_in)) * 703 %></ul>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
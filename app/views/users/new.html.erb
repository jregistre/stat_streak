<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :nick_name %>
      <%= f.text_field :nick_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :sex %>
      <%= f.text_field :sex %>

      <%= f.label :start_weight %>
      <%= f.text_field :start_weight %>

      <%= f.label :target_weight %>
      <%= f.text_field :target_weight %>

      <%= f.label :height_ft %>
      <%= f.text_field :height_ft %>

      <%= f.label :height_in %>
      <%= f.text_field :height_in %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<li id="<%= scale_item.id %>">
  <%= link_to gravatar_for(scale_item.user), scale_item.user %>
    <span class="user">
      <%= link_to scale_item.user.name, scale_item.user %>
    </span>
    <span class="weight"><%= scale_item.weight %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(scale_item.created_at) %> ago.
    </span>
  <% if current_user?(scale_item.user) %>
    <%= link_to "delete", scale_item, method: :delete,
                                     data: { confirm: "Please confirm" },
                                     title: scale_item.weight %>
  <% end %>
</li>